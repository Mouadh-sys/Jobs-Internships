{% extends 'admin/base.html.twig' %}

{% block title %}Pending Companies{% endblock %}

{% block body %}
<h2>Pending Companies Approval</h2>
<a href="{{ path('admin_companies_list') }}" class="btn">All Companies</a>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Owner</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for company in companies %}
        <tr>
            <td>{{ company.id }}</td>
            <td>{{ company.name }}</td>
            <td>{{ company.user.email }}</td>
            <td>{{ company.description|slice(0, 100) }}{% if company.description|length > 100 %}...{% endif %}</td>
            <td>{{ company.createdAt|date('Y-m-d H:i') }}</td>
            <td>
                <a href="{{ path('admin_company_show', {id: company.id}) }}" class="btn btn-primary">View</a>
                <form method="post" action="{{ path('admin_company_approve', {id: company.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ company.id) }}">
                    <button type="submit" class="btn btn-success">Approve</button>
                </form>
                <form method="post" action="{{ path('admin_company_reject', {id: company.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ company.id) }}">
                    <input type="text" name="reason" placeholder="Rejection reason" style="padding: 0.25rem;">
                    <button type="submit" class="btn btn-danger">Reject</button>
                </form>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">No pending companies</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

