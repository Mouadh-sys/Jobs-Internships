{% extends 'admin/base.html.twig' %}

{% block title %}Company Details{% endblock %}

{% block breadcrumb %}
    <a href="{{ path('admin_companies_list') }}" class="breadcrumb-item" style="text-decoration: none; color: inherit;">Companies</a>
    <span class="breadcrumb-item">/</span>
    <span class="breadcrumb-item">Company Details</span>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #9333ea;
            --primary-hover: #7c3aed;
            --primary-light: #a855f7;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
            --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
            --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1);
        }

        .company-detail-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Back Button */
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--gray-600);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.9375rem;
            margin-bottom: 2rem;
            transition: all 0.2s ease;
            padding: 0.5rem 0;
        }

        .back-link:hover {
            color: var(--primary-color);
            transform: translateX(-4px);
        }

        .back-link i {
            font-size: 0.875rem;
        }

        /* Main Card */
        .detail-card {
            background: white;
            border-radius: 20px;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--gray-100);
            overflow: hidden;
        }

        /* Card Header */
        .detail-header {
            background: linear-gradient(135deg, #f0fdf4, #dcfce7);
            padding: 2.5rem;
            border-bottom: 1px solid var(--gray-100);
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .header-left {
            flex: 1;
            min-width: 0;
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .company-logo-large {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #10b981, #059669);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            box-shadow: 0 8px 20px rgba(16, 185, 129, 0.4);
            overflow: hidden;
        }

        .company-logo-large img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .company-logo-large i {
            font-size: 3.5rem;
            color: white;
        }

        .header-info {
            flex: 1;
            min-width: 0;
        }

        .detail-title {
            font-size: 2rem;
            font-weight: 800;
            color: var(--gray-900);
            margin: 0 0 0.5rem 0;
            background: linear-gradient(135deg, #10b981, #059669);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .detail-subtitle {
            font-size: 1rem;
            color: var(--gray-600);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .detail-subtitle i {
            font-size: 0.875rem;
            color: #10b981;
        }

        .header-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn-header {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.9375rem;
            text-decoration: none;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
        }

        .btn-back {
            background: var(--gray-100);
            color: var(--gray-700);
        }

        .btn-back:hover {
            background: var(--gray-200);
            transform: translateY(-1px);
        }

        .btn-edit {
            background: linear-gradient(135deg, var(--warning-color), #d97706);
            color: white;
        }

        .btn-edit:hover {
            background: linear-gradient(135deg, #d97706, var(--warning-color));
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
        }

        /* Card Body */
        .detail-body {
            padding: 2.5rem;
        }

        /* Info Grid */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            padding: 1.5rem;
            background: var(--gray-50);
            border-radius: 12px;
            border: 1px solid var(--gray-200);
            transition: all 0.2s;
        }

        .info-item:hover {
            background: white;
            border-color: #10b981;
            box-shadow: var(--shadow-sm);
            transform: translateY(-2px);
        }

        .info-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-500);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .info-label i {
            font-size: 0.875rem;
            color: #10b981;
        }

        .info-value {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--gray-900);
            word-break: break-word;
        }

        .info-value a {
            color: #10b981;
            text-decoration: none;
            transition: all 0.2s;
        }

        .info-value a:hover {
            color: #059669;
            text-decoration: underline;
        }

        /* Status Badges Section */
        .status-section {
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .section-title i {
            color: #10b981;
        }

        .status-badges {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.25rem;
            border-radius: 12px;
            font-size: 0.9375rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.025em;
            box-shadow: var(--shadow-sm);
        }

        .status-badge-approved {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .status-badge-pending {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
            border: 1px solid #fcd34d;
        }

        .status-badge-active {
            background: linear-gradient(135deg, #dbeafe, #bfdbfe);
            color: #1e40af;
            border: 1px solid #93c5fd;
        }

        .status-badge-inactive {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .status-badge i {
            font-size: 0.875rem;
        }

        /* Description Section */
        .description-section {
            margin-bottom: 2rem;
        }

        .description-content {
            background: var(--gray-50);
            border-radius: 12px;
            padding: 1.5rem;
            border: 1px solid var(--gray-200);
            font-size: 1rem;
            line-height: 1.7;
            color: var(--gray-700);
            white-space: pre-wrap;
        }

        .no-description {
            color: var(--gray-500);
            font-style: italic;
        }

        /* Owner Section */
        .owner-section {
            margin-bottom: 2rem;
        }

        .owner-card {
            background: var(--gray-50);
            border-radius: 12px;
            padding: 1.5rem;
            border: 1px solid var(--gray-200);
            transition: all 0.2s;
        }

        .owner-card:hover {
            background: white;
            border-color: #10b981;
            box-shadow: var(--shadow-sm);
        }

        .owner-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .owner-avatar {
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1.5rem;
            color: white;
            flex-shrink: 0;
            box-shadow: 0 4px 12px rgba(147, 51, 234, 0.3);
        }

        .owner-details {
            flex: 1;
            min-width: 0;
        }

        .owner-name {
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 0.25rem;
        }

        .owner-email {
            font-size: 0.9375rem;
            color: var(--gray-600);
        }

        .owner-email a {
            color: var(--primary-color);
            text-decoration: none;
            transition: all 0.2s;
        }

        .owner-email a:hover {
            color: var(--primary-hover);
            text-decoration: underline;
        }

        /* Job Offers Section */
        .job-offers-section {
            margin-bottom: 2rem;
        }

        .job-offers-count {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            color: white;
            font-weight: 700;
            font-size: 1.125rem;
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(147, 51, 234, 0.3);
        }

        .job-offers-list {
            margin-top: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .job-offer-item {
            background: var(--gray-50);
            border-radius: 12px;
            padding: 1.25rem;
            border: 1px solid var(--gray-200);
            transition: all 0.2s;
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .job-offer-item:hover {
            background: white;
            border-color: var(--primary-light);
            box-shadow: var(--shadow-sm);
            transform: translateX(4px);
            text-decoration: none;
        }

        .job-offer-title {
            font-size: 1.0625rem;
            font-weight: 600;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
        }

        .job-offer-meta {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            font-size: 0.875rem;
            color: var(--gray-600);
        }

        .job-offer-meta span {
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .job-offer-meta i {
            color: var(--gray-400);
        }

        /* Section Divider */
        .section-divider {
            height: 1px;
            background: var(--gray-200);
            margin: 2rem 0;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid var(--gray-200);
        }

        @media (max-width: 768px) {
            .detail-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .header-left {
                flex-direction: column;
                align-items: flex-start;
            }

            .header-actions {
                width: 100%;
            }

            .btn-header {
                flex: 1;
                justify-content: center;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="company-detail-container">
    <a href="{{ path('admin_companies_list') }}" class="back-link">
        <i class="fas fa-arrow-left"></i> Back to Companies
    </a>

    <div class="detail-card">
        <div class="detail-header">
            <div class="header-left">
                <div class="company-logo-large">
                    {% if company.logoFilename %}
                        <img src="{{ asset('uploads/logos/' ~ company.logoFilename) }}" alt="{{ company.name }}">
                    {% else %}
                        <i class="fas fa-building"></i>
                    {% endif %}
                </div>
                <div class="header-info">
                    <h1 class="detail-title">{{ company.name }}</h1>
                    <p class="detail-subtitle">
                        <i class="fas fa-envelope"></i>
                        {{ company.user.email }}
                    </p>
                </div>
            </div>
            <div class="header-actions">
                <a href="{{ path('admin_companies_list') }}" class="btn-header btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Back
                </a>
                <a href="{{ path('admin_company_edit', {id: company.id}) }}" class="btn-header btn-edit">
                    <i class="fas fa-edit"></i>
                    Edit Company
                </a>
            </div>
        </div>

        <div class="detail-body">
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-id-badge"></i>
                        Company ID
                    </span>
                    <span class="info-value">#{{ company.id }}</span>
                </div>

                {% if company.location %}
                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-map-marker-alt"></i>
                        Location
                    </span>
                    <span class="info-value">{{ company.location }}</span>
                </div>
                {% endif %}

                {% if company.website %}
                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-globe"></i>
                        Website
                    </span>
                    <span class="info-value">
                        <a href="{{ company.website }}" target="_blank">{{ company.website }}</a>
                    </span>
                </div>
                {% endif %}

                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-briefcase"></i>
                        Job Offers
                    </span>
                    <span class="info-value">{{ company.jobOffers|length }} Active Offer{{ company.jobOffers|length != 1 ? 's' : '' }}</span>
                </div>

                <div class="info-item">
                    <span class="info-label">
                        <i class="fas fa-calendar-alt"></i>
                        Created At
                    </span>
                    <span class="info-value">{{ company.createdAt|date('F j, Y \\a\\t g:i A') }}</span>
                </div>
            </div>

            <div class="section-divider"></div>

            <div class="status-section">
                <h2 class="section-title">
                    <i class="fas fa-info-circle"></i>
                    Company Status
                </h2>
                <div class="status-badges">
                    {% if company.isApproved %}
                        <span class="status-badge status-badge-approved">
                            <i class="fas fa-check-circle"></i>
                            Approved
                        </span>
                    {% else %}
                        <span class="status-badge status-badge-pending">
                            <i class="fas fa-clock"></i>
                            Pending Approval
                        </span>
                    {% endif %}
                    {% if company.isActive %}
                        <span class="status-badge status-badge-active">
                            <i class="fas fa-power-off"></i>
                            Active
                        </span>
                    {% else %}
                        <span class="status-badge status-badge-inactive">
                            <i class="fas fa-power-off"></i>
                            Inactive
                        </span>
                    {% endif %}
                </div>
            </div>

            {% if company.description %}
            <div class="section-divider"></div>

            <div class="description-section">
                <h2 class="section-title">
                    <i class="fas fa-align-left"></i>
                    Company Description
                </h2>
                <div class="description-content">{{ company.description }}</div>
            </div>
            {% endif %}

            <div class="section-divider"></div>

            <div class="owner-section">
                <h2 class="section-title">
                    <i class="fas fa-user"></i>
                    Company Owner
                </h2>
                <div class="owner-card">
                    <div class="owner-info">
                        <div class="owner-avatar">
                            {{ company.user.fullName|first|upper }}
                        </div>
                        <div class="owner-details">
                            <div class="owner-name">{{ company.user.fullName }}</div>
                            <div class="owner-email">
                                <a href="mailto:{{ company.user.email }}">{{ company.user.email }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% if company.jobOffers|length > 0 %}
            <div class="section-divider"></div>

            <div class="job-offers-section">
                <h2 class="section-title">
                    <i class="fas fa-briefcase"></i>
                    Job Offers
                </h2>
                <div class="job-offers-count">
                    <i class="fas fa-briefcase"></i>
                    {{ company.jobOffers|length }} Job Offer{{ company.jobOffers|length != 1 ? 's' : '' }}
                </div>
                <div class="job-offers-list">
                    {% for offer in company.jobOffers|slice(0, 5) %}
                        <a href="{{ path('admin_offer_show', {id: offer.id}) }}" class="job-offer-item">
                            <div class="job-offer-title">{{ offer.title }}</div>
                            <div class="job-offer-meta">
                                <span>
                                    <i class="fas fa-map-marker-alt"></i>
                                    {{ offer.location|default('Remote') }}
                                </span>
                                <span>
                                    <i class="fas fa-file-contract"></i>
                                    {{ offer.type }}
                                </span>
                                <span>
                                    <i class="fas fa-calendar-alt"></i>
                                    {{ offer.createdAt|date('M d, Y') }}
                                </span>
                                {% if offer.isActive %}
                                <span style="color: var(--success-color);">
                                    <i class="fas fa-check-circle"></i>
                                    Active
                                </span>
                                {% else %}
                                <span style="color: var(--gray-500);">
                                    <i class="fas fa-minus-circle"></i>
                                    Inactive
                                </span>
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                    {% if company.jobOffers|length > 5 %}
                        <div style="text-align: center; padding: 1rem; color: var(--gray-600);">
                            <i class="fas fa-ellipsis-h"></i>
                            And {{ company.jobOffers|length - 5 }} more job offer{{ (company.jobOffers|length - 5) != 1 ? 's' : '' }}
                        </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
