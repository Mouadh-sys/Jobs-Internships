{% extends 'admin/base.html.twig' %}

{% block title %}Job Offers Management{% endblock %}

{% block breadcrumb %}
    <span class="breadcrumb-item">Job Offers</span>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #9333ea;
            --primary-hover: #7c3aed;
            --primary-light: #a855f7;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
            --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
            --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1);
        }

        .offers-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Page Header */
        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .page-header-left {
            flex: 1;
            min-width: 0;
        }

        .page-title {
            font-size: 2.25rem;
            font-weight: 800;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-subtitle {
            font-size: 1.0625rem;
            color: var(--gray-600);
        }

        /* Filter Section */
        .filter-section {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
        }

        .filter-form {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            align-items: flex-end;
        }

        .filter-group {
            flex: 1;
            min-width: 200px;
        }

        .filter-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-700);
            margin-bottom: 0.5rem;
        }

        .filter-select {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.75rem;
            border: 1px solid var(--gray-300);
            border-radius: 10px;
            font-size: 0.9375rem;
            transition: all 0.2s;
            background: var(--gray-50);
            appearance: none;
            cursor: pointer;
        }

        .filter-select:focus {
            outline: none;
            border-color: var(--primary-color);
            background: white;
            box-shadow: 0 0 0 3px rgba(147, 51, 234, 0.1);
        }

        .filter-select-wrapper {
            position: relative;
        }

        .filter-select-wrapper::after {
            content: '\f078';
            font-family: 'Font Awesome 6 Free';
            font-weight: 900;
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-400);
            pointer-events: none;
        }

        .filter-input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-400);
            font-size: 0.9375rem;
            z-index: 1;
        }

        .btn-filter {
            padding: 0.75rem 1.5rem;
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.9375rem;
            cursor: pointer;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-filter:hover {
            background: var(--primary-hover);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(147, 51, 234, 0.3);
        }

        /* Offers Grid */
        .offers-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: 1.5rem;
        }

        /* Offer Card */
        .offer-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--gray-100);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .offer-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .offer-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-xl);
            border-color: var(--primary-light);
        }

        .offer-card:hover::before {
            opacity: 1;
        }

        .offer-card-header {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .offer-title {
            font-size: 1.375rem;
            font-weight: 700;
            color: var(--gray-900);
            margin: 0;
            flex: 1;
            min-width: 0;
            line-height: 1.4;
        }

        .offer-status {
            flex-shrink: 0;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.5rem 0.875rem;
            border-radius: 8px;
            font-size: 0.8125rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .status-badge-active {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .status-badge-inactive {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .status-badge i {
            font-size: 0.75rem;
        }

        .offer-meta {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .offer-meta-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.9375rem;
            color: var(--gray-600);
        }

        .offer-meta-item i {
            width: 20px;
            color: var(--gray-400);
            text-align: center;
        }

        .offer-meta-item strong {
            color: var(--gray-700);
            font-weight: 600;
        }

        .offer-stats {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            padding: 1rem;
            background: var(--gray-50);
            border-radius: 12px;
            border: 1px solid var(--gray-200);
        }

        .offer-stat {
            flex: 1;
            text-align: center;
        }

        .offer-stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
            display: block;
            margin-bottom: 0.25rem;
        }

        .offer-stat-label {
            font-size: 0.8125rem;
            color: var(--gray-600);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .offer-actions {
            display: flex;
            gap: 0.75rem;
            flex-wrap: wrap;
        }

        .btn-action {
            flex: 1;
            min-width: 90px;
            padding: 0.625rem 1rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.875rem;
            text-decoration: none;
            text-align: center;
            transition: all 0.2s;
            border: none;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-view {
            background: var(--gray-100);
            color: var(--gray-700);
        }

        .btn-view:hover {
            background: var(--gray-200);
            transform: translateY(-1px);
        }

        .btn-edit {
            background: linear-gradient(135deg, var(--warning-color), #d97706);
            color: white;
        }

        .btn-edit:hover {
            background: linear-gradient(135deg, #d97706, var(--warning-color));
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
        }

        .btn-toggle {
            background: linear-gradient(135deg, var(--success-color), #059669);
            color: white;
        }

        .btn-toggle:hover {
            background: linear-gradient(135deg, #059669, var(--success-color));
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .btn-toggle-inactive {
            background: linear-gradient(135deg, var(--warning-color), #d97706);
            color: white;
        }

        .btn-toggle-inactive:hover {
            background: linear-gradient(135deg, #d97706, var(--warning-color));
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
        }

        .btn-delete {
            background: linear-gradient(135deg, var(--danger-color), #dc2626);
            color: white;
        }

        .btn-delete:hover {
            background: linear-gradient(135deg, #dc2626, var(--danger-color));
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }

        .inline-form {
            display: inline;
            margin: 0;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 20px;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
        }

        .empty-state-icon {
            font-size: 4rem;
            color: var(--gray-300);
            margin-bottom: 1.5rem;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 0.75rem;
        }

        .empty-state-text {
            font-size: 1.0625rem;
            color: var(--gray-600);
            margin-bottom: 2rem;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            margin-top: 2.5rem;
            flex-wrap: wrap;
        }

        .pagination-item {
            padding: 0.625rem 1rem;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9375rem;
            transition: all 0.2s;
            border: 1px solid var(--gray-300);
            background: white;
            color: var(--gray-700);
            min-width: 40px;
            text-align: center;
        }

        .pagination-item:hover {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
            transform: translateY(-1px);
        }

        .pagination-item.active {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .pagination-item.disabled {
            opacity: 0.5;
            cursor: not-allowed;
            pointer-events: none;
        }

        @media (max-width: 768px) {
            .offers-grid {
                grid-template-columns: 1fr;
            }

            .filter-form {
                flex-direction: column;
            }

            .filter-group {
                width: 100%;
            }

            .offer-actions {
                flex-direction: column;
            }

            .btn-action {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="offers-container">
    <div class="page-header">
        <div class="page-header-left">
            <h1 class="page-title">Job Offers Management</h1>
            <p class="page-subtitle">Manage all job offers posted by companies.</p>
        </div>
    </div>

    <div class="filter-section">
        <form method="get" class="filter-form">
            <div class="filter-group">
                <label class="filter-label">Status</label>
                <div class="filter-select-wrapper">
                    <i class="fas fa-filter filter-input-icon"></i>
                    <select name="status" class="filter-select">
                        <option value="">All Offers</option>
                        <option value="active" {{ status == 'active' ? 'selected' : '' }}>Active</option>
                        <option value="inactive" {{ status == 'inactive' ? 'selected' : '' }}>Inactive</option>
                    </select>
                </div>
            </div>
            <div class="filter-group" style="flex: 0 0 auto;">
                <label class="filter-label" style="opacity: 0;">Filter</label>
                <button type="submit" class="btn-filter">
                    <i class="fas fa-filter"></i>
                    Filter
                </button>
            </div>
        </form>
    </div>

    <div class="offers-grid">
        {% if offers|length > 0 %}
            {% for offer in offers %}
                <div class="offer-card">
                    <div class="offer-card-header">
                        <h3 class="offer-title">{{ offer.title }}</h3>
                        <div class="offer-status">
                            {% if offer.isActive %}
                                <span class="status-badge status-badge-active">
                                    <i class="fas fa-check-circle"></i>
                                    Active
                                </span>
                            {% else %}
                                <span class="status-badge status-badge-inactive">
                                    <i class="fas fa-minus-circle"></i>
                                    Inactive
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="offer-meta">
                        <div class="offer-meta-item">
                            <i class="fas fa-building"></i>
                            <span><strong>Company:</strong> {{ offer.company.name }}</span>
                        </div>
                        <div class="offer-meta-item">
                            <i class="fas fa-folder"></i>
                            <span><strong>Category:</strong> {{ offer.category.name }}</span>
                        </div>
                        <div class="offer-meta-item">
                            <i class="fas fa-file-contract"></i>
                            <span><strong>Type:</strong> {{ offer.type }}</span>
                        </div>
                        {% if offer.location %}
                        <div class="offer-meta-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span><strong>Location:</strong> {{ offer.location }}</span>
                        </div>
                        {% endif %}
                        <div class="offer-meta-item">
                            <i class="fas fa-calendar-alt"></i>
                            <span><strong>Posted:</strong> {{ offer.createdAt|date('M d, Y') }}</span>
                        </div>
                    </div>

                    <div class="offer-stats">
                        <div class="offer-stat">
                            <span class="offer-stat-value">{{ offer.applications|length }}</span>
                            <span class="offer-stat-label">Applications</span>
                        </div>
                    </div>

                    <div class="offer-actions">
                        <a href="{{ path('admin_offer_show', {id: offer.id}) }}" class="btn-action btn-view">
                            <i class="fas fa-eye"></i>
                            View
                        </a>
                        <a href="{{ path('admin_offer_edit', {id: offer.id}) }}" class="btn-action btn-edit">
                            <i class="fas fa-edit"></i>
                            Edit
                        </a>
                        <form method="post" action="{{ path('admin_offer_toggle', {id: offer.id}) }}" onsubmit="return confirm('Are you sure you want to {{ offer.isActive ? 'deactivate' : 'activate' }} this offer?');" class="inline-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ offer.id) }}">
                            <button type="submit" class="btn-action {{ offer.isActive ? 'btn-toggle-inactive' : 'btn-toggle' }}">
                                <i class="fas fa-power-off"></i>
                                {{ offer.isActive ? 'Deactivate' : 'Activate' }}
                            </button>
                        </form>
                        <form method="post" action="{{ path('admin_offer_delete', {id: offer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this offer?');" class="inline-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
                            <button type="submit" class="btn-action btn-delete">
                                <i class="fas fa-trash-alt"></i>
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="empty-state" style="grid-column: 1 / -1;">
                <i class="fas fa-briefcase empty-state-icon"></i>
                <h3 class="empty-state-title">No Job Offers Found</h3>
                <p class="empty-state-text">No job offers match your filter criteria. Try adjusting your filters.</p>
            </div>
        {% endif %}
    </div>

    {% if totalPages > 1 %}
        <div class="pagination">
            {% if page > 1 %}
                <a href="?page={{ page - 1 }}&status={{ status }}" class="pagination-item">
                    <i class="fas fa-chevron-left"></i>
                </a>
            {% else %}
                <span class="pagination-item disabled">
                    <i class="fas fa-chevron-left"></i>
                </span>
            {% endif %}

            {% for i in range(1, totalPages) %}
                {% if i == page %}
                    <span class="pagination-item active">{{ i }}</span>
                {% elseif i == 1 or i == totalPages or (i >= page - 2 and i <= page + 2) %}
                    <a href="?page={{ i }}&status={{ status }}" class="pagination-item">{{ i }}</a>
                {% elseif i == page - 3 or i == page + 3 %}
                    <span class="pagination-item">...</span>
                {% endif %}
            {% endfor %}

            {% if page < totalPages %}
                <a href="?page={{ page + 1 }}&status={{ status }}" class="pagination-item">
                    <i class="fas fa-chevron-right"></i>
                </a>
            {% else %}
                <span class="pagination-item disabled">
                    <i class="fas fa-chevron-right"></i>
                </span>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
