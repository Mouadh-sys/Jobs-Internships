{% extends 'admin/base.html.twig' %}

{% block title %}Admin Activity Logs{% endblock %}

{% block breadcrumb %}
    <span class="breadcrumb-item">Activity Logs</span>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #9333ea;
            --primary-hover: #7c3aed;
            --primary-light: #a855f7;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --info-color: #3b82f6;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
            --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
            --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1);
        }

        .logs-container {
            max-width: 1600px;
            margin: 0 auto;
        }

        /* Page Header */
        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .page-header-left {
            flex: 1;
            min-width: 0;
        }

        .page-title {
            font-size: 2.25rem;
            font-weight: 800;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-subtitle {
            font-size: 1.0625rem;
            color: var(--gray-600);
        }

        .btn-export {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.875rem 1.75rem;
            background: linear-gradient(135deg, var(--success-color), #059669);
            color: white;
            font-weight: 600;
            font-size: 0.9375rem;
            border-radius: 12px;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .btn-export:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
            background: linear-gradient(135deg, #059669, var(--success-color));
        }

        .btn-export i {
            font-size: 1rem;
        }

        /* Filter Section */
        .filter-section {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
        }

        .filter-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--gray-100);
        }

        .filter-header i {
            font-size: 1.25rem;
            color: var(--primary-color);
        }

        .filter-header h3 {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--gray-900);
            margin: 0;
        }

        .filter-form {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.25rem;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
        }

        .filter-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--gray-700);
            margin-bottom: 0.5rem;
        }

        .filter-label i {
            font-size: 0.875rem;
            color: var(--gray-400);
        }

        .filter-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid var(--gray-300);
            border-radius: 10px;
            font-size: 0.9375rem;
            transition: all 0.2s;
            background: var(--gray-50);
        }

        .filter-input:focus {
            outline: none;
            border-color: var(--primary-color);
            background: white;
            box-shadow: 0 0 0 3px rgba(147, 51, 234, 0.1);
        }

        .filter-actions {
            display: flex;
            gap: 0.75rem;
            align-items: flex-end;
        }

        .btn-filter {
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            color: white;
            font-weight: 600;
            font-size: 0.9375rem;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            box-shadow: 0 2px 8px rgba(147, 51, 234, 0.2);
        }

        .btn-filter:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(147, 51, 234, 0.3);
        }

        .btn-clear {
            padding: 0.75rem 1.5rem;
            background: var(--gray-100);
            color: var(--gray-700);
            font-weight: 600;
            font-size: 0.9375rem;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .btn-clear:hover {
            background: var(--gray-200);
            transform: translateY(-1px);
        }

        /* Logs Table */
        .logs-table-wrapper {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
        }

        .logs-table {
            width: 100%;
            border-collapse: collapse;
        }

        .logs-table thead {
            background: linear-gradient(135deg, var(--gray-50), var(--gray-100));
        }

        .logs-table th {
            padding: 1.25rem 1rem;
            text-align: left;
            font-size: 0.875rem;
            font-weight: 700;
            color: var(--gray-700);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            border-bottom: 2px solid var(--gray-200);
        }

        .logs-table tbody tr {
            border-bottom: 1px solid var(--gray-100);
            transition: all 0.2s;
        }

        .logs-table tbody tr:hover {
            background: var(--gray-50);
        }

        .logs-table tbody tr:last-child {
            border-bottom: none;
        }

        .logs-table td {
            padding: 1.25rem 1rem;
            font-size: 0.9375rem;
            color: var(--gray-700);
            vertical-align: middle;
        }

        /* Action Badge */
        .action-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.8125rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .action-badge i {
            font-size: 0.75rem;
        }

        .action-badge-CREATE {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .action-badge-UPDATE {
            background: linear-gradient(135deg, #dbeafe, #bfdbfe);
            color: #1e40af;
            border: 1px solid #93c5fd;
        }

        .action-badge-DELETE {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .action-badge-APPROVE {
            background: linear-gradient(135deg, #e9d5ff, #ddd6fe);
            color: #581c87;
            border: 1px solid #c4b5fd;
        }

        .action-badge-REJECT {
            background: linear-gradient(135deg, #fed7aa, #fdba74);
            color: #92400e;
            border: 1px solid #fb923c;
        }

        /* Entity Type Badge */
        .entity-type-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.375rem 0.75rem;
            border-radius: 8px;
            font-size: 0.8125rem;
            font-weight: 600;
            background: var(--gray-100);
            color: var(--gray-700);
            border: 1px solid var(--gray-200);
        }

        .entity-type-badge i {
            font-size: 0.75rem;
            color: var(--gray-500);
        }

        /* Admin Info */
        .admin-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .admin-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 0.875rem;
            flex-shrink: 0;
        }

        .admin-email {
            font-weight: 500;
            color: var(--gray-700);
        }

        /* Date Display */
        .date-display {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .date-display .date {
            font-weight: 600;
            color: var(--gray-900);
        }

        .date-display .time {
            font-size: 0.8125rem;
            color: var(--gray-500);
        }

        /* Entity ID */
        .entity-id {
            font-family: 'Courier New', monospace;
            font-size: 0.875rem;
            color: var(--gray-600);
            background: var(--gray-50);
            padding: 0.375rem 0.75rem;
            border-radius: 6px;
            display: inline-block;
        }

        /* View Button */
        .btn-view {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: var(--gray-100);
            color: var(--gray-700);
            font-weight: 600;
            font-size: 0.875rem;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.2s;
        }

        .btn-view:hover {
            background: var(--gray-200);
            transform: translateY(-1px);
        }

        .btn-view i {
            font-size: 0.75rem;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 16px;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
        }

        .empty-state-icon {
            font-size: 4rem;
            color: var(--gray-300);
            margin-bottom: 1.5rem;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 0.75rem;
        }

        .empty-state-text {
            font-size: 1.0625rem;
            color: var(--gray-600);
        }

        @media (max-width: 1024px) {
            .logs-table {
                font-size: 0.875rem;
            }

            .logs-table th,
            .logs-table td {
                padding: 1rem 0.75rem;
            }
        }

        @media (max-width: 768px) {
            .filter-form {
                grid-template-columns: 1fr;
            }

            .filter-actions {
                flex-direction: column;
            }

            .logs-table-wrapper {
                overflow-x: auto;
            }

            .logs-table {
                min-width: 800px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="logs-container">
    <div class="page-header">
        <div class="page-header-left">
            <h1 class="page-title">Activity Logs</h1>
            <p class="page-subtitle">Track and monitor all admin actions and system changes.</p>
        </div>
        <a href="{{ path('admin_logs_export', filters) }}" class="btn-export">
            <i class="fas fa-download"></i>
            Export CSV
        </a>
    </div>

    <div class="filter-section">
        <div class="filter-header">
            <i class="fas fa-filter"></i>
            <h3>Filter Logs</h3>
        </div>
        <form method="get" class="filter-form">
            <div class="filter-group">
                <label class="filter-label">
                    <i class="fas fa-user-shield"></i>
                    Admin User ID
                </label>
                <input type="number" name="admin" value="{{ filters.admin }}" class="filter-input" placeholder="Enter admin ID">
            </div>
            <div class="filter-group">
                <label class="filter-label">
                    <i class="fas fa-tag"></i>
                    Entity Type
                </label>
                <input type="text" name="entity_type" value="{{ filters.entity_type }}" class="filter-input" placeholder="User, Company, etc.">
            </div>
            <div class="filter-group">
                <label class="filter-label">
                    <i class="fas fa-bolt"></i>
                    Action
                </label>
                <input type="text" name="action" value="{{ filters.action }}" class="filter-input" placeholder="CREATE, UPDATE, etc.">
            </div>
            <div class="filter-group">
                <label class="filter-label">
                    <i class="fas fa-calendar-alt"></i>
                    Date From
                </label>
                <input type="date" name="date_from" value="{{ filters.date_from }}" class="filter-input">
            </div>
            <div class="filter-group">
                <label class="filter-label">
                    <i class="fas fa-calendar-check"></i>
                    Date To
                </label>
                <input type="date" name="date_to" value="{{ filters.date_to }}" class="filter-input">
            </div>
            <div class="filter-actions">
                <button type="submit" class="btn-filter">
                    <i class="fas fa-search"></i>
                    Filter
                </button>
                <a href="{{ path('admin_logs_list') }}" class="btn-clear">
                    <i class="fas fa-times"></i>
                    Clear
                </a>
            </div>
        </form>
    </div>

    {% if logs|length > 0 %}
        <div class="logs-table-wrapper">
            <table class="logs-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Admin</th>
                        <th>Action</th>
                        <th>Entity Type</th>
                        <th>Entity ID</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for log in logs %}
                        <tr>
                            <td>
                                <span class="entity-id">#{{ log.id }}</span>
                            </td>
                            <td>
                                <div class="admin-info">
                                    <div class="admin-avatar">
                                        {{ log.admin.email|first|upper }}
                                    </div>
                                    <span class="admin-email">{{ log.admin.email }}</span>
                                </div>
                            </td>
                            <td>
                                <span class="action-badge action-badge-{{ log.action }}">
                                    {% if log.action == 'CREATE' %}
                                        <i class="fas fa-plus-circle"></i>
                                    {% elseif log.action == 'UPDATE' %}
                                        <i class="fas fa-edit"></i>
                                    {% elseif log.action == 'DELETE' %}
                                        <i class="fas fa-trash-alt"></i>
                                    {% elseif log.action == 'APPROVE' %}
                                        <i class="fas fa-check-circle"></i>
                                    {% elseif log.action == 'REJECT' %}
                                        <i class="fas fa-times-circle"></i>
                                    {% else %}
                                        <i class="fas fa-circle"></i>
                                    {% endif %}
                                    {{ log.action }}
                                </span>
                            </td>
                            <td>
                                <span class="entity-type-badge">
                                    <i class="fas fa-cube"></i>
                                    {{ log.entityType }}
                                </span>
                            </td>
                            <td>
                                <span class="entity-id">{{ log.entityId }}</span>
                            </td>
                            <td>
                                <div class="date-display">
                                    <span class="date">{{ log.createdAt|date('M d, Y') }}</span>
                                    <span class="time">{{ log.createdAt|date('H:i:s') }}</span>
                                </div>
                            </td>
                            <td>
                                <a href="{{ path('admin_log_show', {id: log.id}) }}" class="btn-view">
                                    <i class="fas fa-eye"></i>
                                    View
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="empty-state">
            <i class="fas fa-clipboard-list empty-state-icon"></i>
            <h3 class="empty-state-title">No Logs Found</h3>
            <p class="empty-state-text">No activity logs match your current filters. Try adjusting your search criteria.</p>
        </div>
    {% endif %}
</div>
{% endblock %}
