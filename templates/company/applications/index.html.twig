{% extends 'layouts/company_base.html.twig' %}

{% block title %}Applications - My Company{% endblock %}

{% block breadcrumb %}
    <span class="breadcrumb-item">Applications</span>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #10b981;
            --primary-hover: #059669;
            --primary-light: #34d399;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
            --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
            --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1);
        }

        .applications-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Page Header */
        .page-header {
            margin-bottom: 2.5rem;
        }

        .page-title {
            font-size: 2.25rem;
            font-weight: 800;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--primary-color), #059669);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-subtitle {
            font-size: 1.0625rem;
            color: var(--gray-600);
        }

        /* Applications Grid */
        .applications-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        /* Application Card */
        .application-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--gray-100);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .application-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .application-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-xl);
            border-color: var(--primary-light);
            text-decoration: none;
            color: inherit;
        }

        .application-card:hover::before {
            opacity: 1;
        }

        .application-card-header {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            gap: 1.5rem;
            margin-bottom: 1.25rem;
        }

        .candidate-info {
            flex: 1;
            min-width: 0;
        }

        .candidate-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--gray-900);
            margin: 0 0 0.5rem 0;
            line-height: 1.3;
        }

        .job-title {
            font-size: 1rem;
            color: var(--primary-color);
            font-weight: 600;
            margin: 0;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.8125rem;
            font-weight: 600;
            white-space: nowrap;
            flex-shrink: 0;
        }

        .status-badge.pending {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
            border: 1px solid #fcd34d;
        }

        .status-badge.accepted {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .status-badge.rejected {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .status-badge i {
            font-size: 0.75rem;
        }

        .application-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-100);
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--gray-600);
            font-size: 0.9375rem;
        }

        .meta-item i {
            color: var(--primary-color);
            font-size: 1rem;
            width: 18px;
            text-align: center;
        }

        .meta-item-text {
            font-weight: 500;
        }

        .application-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .application-date {
            color: var(--gray-500);
            font-size: 0.875rem;
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .application-date i {
            font-size: 0.75rem;
        }

        .view-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.625rem 1.25rem;
            border-radius: 10px;
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--primary-color);
            background: var(--gray-100);
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .view-link:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .view-link i {
            font-size: 0.8125rem;
        }

        /* Empty State */
        .empty-state {
            background: white;
            border-radius: 20px;
            padding: 4rem 2rem;
            text-align: center;
            box-shadow: var(--shadow-lg);
            border: 2px dashed var(--gray-200);
        }

        .empty-state-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #f0fdf4, #dcfce7);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: var(--primary-color);
            font-size: 2rem;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
        }

        .empty-state-text {
            font-size: 1.0625rem;
            color: var(--gray-600);
            margin-bottom: 2rem;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        /* Responsive */
        @media (min-width: 1024px) {
            .application-card {
                padding: 2.5rem;
            }
        }

        @media (max-width: 640px) {
            .page-title {
                font-size: 1.875rem;
            }

            .application-card {
                padding: 1.5rem;
            }

            .application-card-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .application-footer {
                flex-direction: column;
                align-items: stretch;
            }

            .view-link {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block content %}
<div class="applications-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Applications</h1>
        <p class="page-subtitle">Review and manage applications received for your job offers</p>
    </div>

    <!-- Applications Grid -->
    {% if applications|length > 0 %}
        <div class="applications-grid">
            {% for application in applications %}
                <a href="{{ path('company_application_show', {id: application.id}) }}" class="application-card">
                    <div class="application-card-header">
                        <div class="candidate-info">
                            <h2 class="candidate-name">{{ application.candidate.fullName }}</h2>
                            <p class="job-title">{{ application.jobOffer.title }}</p>
                        </div>
                        {% if application.isPending() %}
                            <span class="status-badge pending">
                                <i class="fas fa-clock"></i>
                                <span>Pending</span>
                            </span>
                        {% elseif application.isAccepted() %}
                            <span class="status-badge accepted">
                                <i class="fas fa-check-circle"></i>
                                <span>Accepted</span>
                            </span>
                        {% else %}
                            <span class="status-badge rejected">
                                <i class="fas fa-times-circle"></i>
                                <span>Rejected</span>
                            </span>
                        {% endif %}
                    </div>

                    <div class="application-meta">
                        <div class="meta-item">
                            <i class="fas fa-envelope"></i>
                            <span class="meta-item-text">{{ application.candidate.email }}</span>
                        </div>
                        {% if application.candidate.location %}
                            <div class="meta-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span class="meta-item-text">{{ application.candidate.location }}</span>
                            </div>
                        {% endif %}
                        {% if application.cvFilename %}
                            <div class="meta-item">
                                <i class="fas fa-file-pdf"></i>
                                <span class="meta-item-text">CV Attached</span>
                            </div>
                        {% endif %}
                    </div>

                    <div class="application-footer">
                        <div class="application-date">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Applied on {{ application.createdAt|date('M d, Y') }}</span>
                        </div>
                        <span class="view-link">
                            <span>View Details</span>
                            <i class="fas fa-arrow-right"></i>
                        </span>
                    </div>
                </a>
            {% endfor %}
        </div>
    {% else %}
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <h3 class="empty-state-title">No applications yet</h3>
            <p class="empty-state-text">Candidates will appear here when they apply to your job offers. Make sure your offers are active and visible.</p>
        </div>
    {% endif %}
</div>
{% endblock %}
