{% extends 'base.html.twig' %}

{% block title %}Applications - My Company{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.tailwindcss.com"></script>
{% endblock %}

{% block body %}
{% include 'components/company_navbar.html.twig' %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="md:flex md:items-center md:justify-between mb-8">
            <div class="flex-1 min-w-0">
                <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                    Applications
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                    Manage applications received for your job offers
                </p>
            </div>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="rounded-md p-4 mb-6 {{ label == 'success' ? 'bg-green-50' : 'bg-red-50' }}">
                    <div class="flex">
                        <div class="ml-3">
                            <p class="text-sm font-medium {{ label == 'success' ? 'text-green-800' : 'text-red-800' }}">
                                {{ message }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="bg-white shadow overflow-hidden sm:rounded-md">
            {% if applications|length > 0 %}
                <ul role="list" class="divide-y divide-gray-200">
                    {% for application in applications %}
                        <li>
                            <a href="{{ path('company_application_show', {id: application.id}) }}" class="block hover:bg-gray-50">
                                <div class="px-4 py-4 sm:px-6">
                                    <div class="flex items-center justify-between">
                                        <div class="flex-1">
                                            <p class="text-sm font-medium text-indigo-600 truncate">
                                                {{ application.candidate.fullName }}
                                            </p>
                                            <p class="mt-1 text-sm text-gray-500">
                                                Applied for: {{ application.jobOffer.title }}
                                            </p>
                                        </div>
                                        <div class="ml-2 flex-shrink-0 flex">
                                            {% if application.isPending() %}
                                                <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                                    Pending
                                                </p>
                                            {% elseif application.isAccepted() %}
                                                <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                                    Accepted
                                                </p>
                                            {% else %}
                                                <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                                    Rejected
                                                </p>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="mt-2 sm:flex sm:justify-between">
                                        <div class="sm:flex">
                                            <p class="flex items-center text-sm text-gray-500">
                                                {{ application.candidate.email }}
                                            </p>
                                        </div>
                                        <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                                            <p>
                                                <time datetime="{{ application.createdAt|date('Y-m-d') }}">{{ application.createdAt|date('M d, Y') }}</time>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No applications yet</h3>
                    <p class="mt-1 text-sm text-gray-500">Candidates will appear here when they apply to your job offers.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
