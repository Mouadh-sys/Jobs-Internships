{% extends 'base.html.twig' %}

{% block title %}Application Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    
{% endblock %}

{% block body %}
{% include 'components/company_navbar.html.twig' %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-6">
            <a href="{{ path('company_applications_list') }}" class="text-indigo-600 hover:text-indigo-900">
                ‚Üê Back to Applications
            </a>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="rounded-md p-4 mb-6 {{ label == 'success' ? 'bg-green-50' : 'bg-red-50' }}">
                    <div class="flex">
                        <div class="ml-3">
                            <p class="text-sm font-medium {{ label == 'success' ? 'text-green-800' : 'text-red-800' }}">
                                {{ message }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-900">
                        Application Details
                    </h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-500">
                        Applied on {{ application.createdAt|date('F j, Y') }}
                    </p>
                </div>
                <div>
                    {% if application.isPending() %}
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                            Pending
                        </span>
                    {% elseif application.isAccepted() %}
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                            Accepted
                        </span>
                    {% else %}
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                            Rejected
                        </span>
                    {% endif %}
                </div>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
                <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Candidate Name</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ application.candidate.fullName }}</dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Email</dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            <a href="mailto:{{ application.candidate.email }}" class="text-indigo-600 hover:text-indigo-900">
                                {{ application.candidate.email }}
                            </a>
                        </dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Location</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ application.candidate.location|default('Not specified') }}</dd>
                    </div>
                    <div class="sm:col-span-1">
                        <dt class="text-sm font-medium text-gray-500">Job Offer</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ application.jobOffer.title }}</dd>
                    </div>
                    <div class="sm:col-span-2">
                        <dt class="text-sm font-medium text-gray-500">Cover Letter</dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            {{ application.message|default('No cover letter provided.')|nl2br }}
                        </dd>
                    </div>
                    {% if application.cvFilename %}
                        <div class="sm:col-span-2">
                            <dt class="text-sm font-medium text-gray-500">CV</dt>
                            <dd class="mt-1 text-sm text-gray-900">
                                <a href="{{ path('company_application_cv_download', {id: application.id}) }}" class="text-indigo-600 hover:text-indigo-900">
                                    üìÑ Download CV
                                </a>
                            </dd>
                        </div>
                    {% endif %}
                </dl>
            </div>

            {% if application.isPending() %}
                <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
                    <div class="flex justify-end space-x-3">
                        <form method="post" action="{{ path('company_application_reject', {id: application.id}) }}" onsubmit="return confirm('Are you sure you want to reject this application?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ application.id) }}">
                            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                Reject
                            </button>
                        </form>
                        <form method="post" action="{{ path('company_application_accept', {id: application.id}) }}" onsubmit="return confirm('Are you sure you want to accept this application?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('accept' ~ application.id) }}">
                            <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700">
                                Accept
                            </button>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
