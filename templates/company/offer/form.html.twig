{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.tailwindcss.com"></script>
{% endblock %}

{% block body %}
{% include 'components/company_navbar.html.twig' %}
<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <div class="md:flex md:items-center md:justify-between mb-8">
            <div class="flex-1 min-w-0">
                <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                    {{ title }}
                </h2>
            </div>
        </div>

        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                {{ form_errors(form) }}
                
                {% for field in form %}
                    {% if field.vars.name != '_token' %}
                        <div>
                            {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            <div class="mt-1">
                                {{ form_widget(field) }}
                            </div>
                            <div class="mt-1 text-sm text-red-600">
                                {{ form_errors(field) }}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}

                <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
                    <a href="{{ path('company_offers_list') }}" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Cancel
                    </a>
                    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Save Job Offer
                    </button>
                </div>
                
                {{ form_widget(form._token) }}
                
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
</div>
{% endblock %}
