{% extends 'layouts/company_base.html.twig' %}

{% block title %}My Job Offers{% endblock %}

{% block breadcrumb %}
    <span class="breadcrumb-item">My Offers</span>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #10b981;
            --primary-hover: #059669;
            --primary-light: #34d399;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
            --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
            --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1);
        }

        .offers-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Page Header */
        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .page-header-left {
            flex: 1;
            min-width: 0;
        }

        .page-title {
            font-size: 2.25rem;
            font-weight: 800;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--primary-color), #059669);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-subtitle {
            font-size: 1.0625rem;
            color: var(--gray-600);
        }

        .create-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.875rem 1.75rem;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            color: white;
            font-weight: 600;
            font-size: 0.9375rem;
            border-radius: 12px;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .create-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
            background: linear-gradient(135deg, var(--primary-hover), var(--primary-color));
        }

        .create-btn i {
            font-size: 1rem;
        }

        /* Offers Grid */
        .offers-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        /* Offer Card */
        .offer-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--gray-100);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .offer-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .offer-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-xl);
            border-color: var(--primary-light);
        }

        .offer-card:hover::before {
            opacity: 1;
        }

        .offer-card-header {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            gap: 1.5rem;
            margin-bottom: 1.25rem;
        }

        .offer-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--gray-900);
            margin: 0;
            line-height: 1.3;
            flex: 1;
        }

        .offer-title a {
            color: inherit;
            text-decoration: none;
            transition: color 0.2s;
        }

        .offer-title a:hover {
            color: var(--primary-color);
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.8125rem;
            font-weight: 600;
            white-space: nowrap;
            flex-shrink: 0;
        }

        .status-badge.active {
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .status-badge.inactive {
            background: var(--gray-100);
            color: var(--gray-700);
            border: 1px solid var(--gray-200);
        }

        .status-badge i {
            font-size: 0.75rem;
        }

        .offer-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-100);
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--gray-600);
            font-size: 0.9375rem;
        }

        .meta-item i {
            color: var(--primary-color);
            font-size: 1rem;
            width: 18px;
            text-align: center;
        }

        .meta-item-text {
            font-weight: 500;
        }

        .offer-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .offer-date {
            color: var(--gray-500);
            font-size: 0.875rem;
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .offer-date i {
            font-size: 0.75rem;
        }

        .offer-actions {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .action-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.625rem 1.25rem;
            border-radius: 10px;
            font-size: 0.875rem;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s ease;
            border: none;
            cursor: pointer;
        }

        .action-btn i {
            font-size: 0.8125rem;
        }

        .action-btn-edit {
            background: var(--gray-100);
            color: var(--gray-700);
        }

        .action-btn-edit:hover {
            background: var(--primary-color);
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        }

        .action-btn-delete {
            background: #fee2e2;
            color: var(--danger-color);
        }

        .action-btn-delete:hover {
            background: var(--danger-color);
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }

        /* Empty State */
        .empty-state {
            background: white;
            border-radius: 20px;
            padding: 4rem 2rem;
            text-align: center;
            box-shadow: var(--shadow-lg);
            border: 2px dashed var(--gray-200);
        }

        .empty-state-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #f0fdf4, #dcfce7);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: var(--primary-color);
            font-size: 2rem;
        }

        .empty-state-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
        }

        .empty-state-text {
            font-size: 1.0625rem;
            color: var(--gray-600);
            margin-bottom: 2rem;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        .empty-state-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 2rem;
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            color: white;
            font-weight: 600;
            font-size: 1rem;
            border-radius: 12px;
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
            transition: all 0.3s ease;
        }

        .empty-state-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
        }

        .empty-state-btn i {
            font-size: 1.125rem;
        }

        /* Responsive */
        @media (min-width: 768px) {
            .offers-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (min-width: 1024px) {
            .offers-grid {
                grid-template-columns: repeat(1, 1fr);
            }
            
            .offer-card {
                padding: 2.5rem;
            }
        }

        @media (max-width: 640px) {
            .page-title {
                font-size: 1.875rem;
            }

            .offer-card {
                padding: 1.5rem;
            }

            .offer-card-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .offer-footer {
                flex-direction: column;
                align-items: stretch;
            }

            .offer-actions {
                width: 100%;
            }

            .action-btn {
                flex: 1;
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block content %}
<div class="offers-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-left">
            <h1 class="page-title">My Job Offers</h1>
            <p class="page-subtitle">Manage and track all your job postings in one place</p>
        </div>
        <a href="{{ path('company_offer_create') }}" class="create-btn">
            <i class="fas fa-plus"></i>
            <span>Create New Offer</span>
        </a>
    </div>

    <!-- Offers Grid -->
    {% if offers|length > 0 %}
        <div class="offers-grid">
            {% for offer in offers %}
                <div class="offer-card">
                    <div class="offer-card-header">
                        <h2 class="offer-title">
                            {{ offer.title }}
                        </h2>
                        <span class="status-badge {{ offer.isActive ? 'active' : 'inactive' }}">
                            <i class="fas {{ offer.isActive ? 'fa-check-circle' : 'fa-pause-circle' }}"></i>
                            <span>{{ offer.isActive ? 'Active' : 'Inactive' }}</span>
                        </span>
                    </div>

                    <div class="offer-meta">
                        <div class="meta-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span class="meta-item-text">{{ offer.location|default('Remote') }}</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-briefcase"></i>
                            <span class="meta-item-text">{{ offer.type }}</span>
                        </div>
                    </div>

                    <div class="offer-footer">
                        <div class="offer-date">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Posted on {{ offer.createdAt|date('M d, Y') }}</span>
                        </div>
                        <div class="offer-actions">
                            <a href="{{ path('company_offer_edit', {id: offer.id}) }}" class="action-btn action-btn-edit">
                                <i class="fas fa-edit"></i>
                                <span>Edit</span>
                            </a>
                            <form method="post" action="{{ path('company_offer_delete', {id: offer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this offer? This action cannot be undone.');" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
                                <button type="submit" class="action-btn action-btn-delete">
                                    <i class="fas fa-trash-alt"></i>
                                    <span>Delete</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-briefcase"></i>
            </div>
            <h3 class="empty-state-title">No job offers yet</h3>
            <p class="empty-state-text">Get started by creating your first job posting. Reach qualified candidates and grow your team.</p>
            <a href="{{ path('company_offer_create') }}" class="empty-state-btn">
                <i class="fas fa-plus"></i>
                <span>Create Your First Offer</span>
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
