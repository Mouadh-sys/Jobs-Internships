{% extends 'base.html.twig' %}

{% block title %}Company Status{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-white py-3 text-center">
                    <h3 class="mb-0">Account Status</h3>
                </div>
                <div class="card-body p-5 text-center">
                    {% if company.isApproved %}
                        <div class="mb-4 text-success">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                        </div>
                        <h4 class="text-success mb-3">Your Account is Approved!</h4>
                        <p class="text-muted">You have full access to all features. You can post job offers and manage your applications.</p>
                        <a href="{{ path('company_profile_show') }}" class="btn btn-primary mt-3">Go to Profile</a>
                    {% else %}
                        <div class="mb-4 text-warning">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-hourglass-split" viewBox="0 0 16 16">
                                <path d="M2.5 15a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1h-11zm2-13v1c0 .537.12 1.045.337 1.5h6.326c.216-.455.337-.963.337-1.5V2h-7zm3 6.35c0 .701-.478 1.236-1.011 1.492A3.5 3.5 0 0 0 4.5 13s.866-1.299 3-1.48V8.35zm1 0v3.17c2.134.181 3 1.48 3 1.48a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351z"/>
                            </svg>
                        </div>
                        <h4 class="text-warning mb-3">Verification Pending</h4>
                        <p class="text-muted">Your account is currently under review by our administrators. This process typically takes 24-48 hours.</p>
                        <p class="text-muted small">You will be notified once your account is approved.</p>
                        <div class="alert alert-secondary mt-4">
                            <strong>Note:</strong> While pending, you can still update your profile details.
                        </div>
                        <a href="{{ path('app_company_profile_edit') }}" class="btn btn-outline-warning mt-2">Update Profile</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
