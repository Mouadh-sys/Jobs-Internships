{% extends 'base.html.twig' %}

{% block title %}Search Jobs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f3f4f6; }
    </style>
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
                Find Your Dream Job
            </h1>
            <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">
                Browse through hundreds of active job offers and start your career today.
            </p>
        </div>

        <!-- Filter Section -->
        <div class="bg-white shadow-lg rounded-2xl p-6 mb-10 border border-gray-100">
            <form method="get" action="{{ path('app_offers_index') }}" class="space-y-4 md:space-y-0 md:flex md:gap-4 md:items-end">
                <div class="flex-1">
                    <label for="keyword" class="block text-sm font-medium text-gray-700 mb-1">Keywords</label>
                    <input type="text" name="keyword" id="keyword" value="{{ currentFilters.keyword }}" placeholder="Job title, keywords..." class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-3 bg-gray-50">
                </div>
                
                <div class="w-full md:w-48">
                    <label for="category" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                    <select name="category" id="category" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-3 bg-gray-50">
                        <option value="">All Categories</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {% if currentFilters.category == category.id %}selected{% endif %}>{{ category.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="w-full md:w-48">
                    <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
                    <input type="text" name="location" id="location" value="{{ currentFilters.location }}" placeholder="City, region..." class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-3 bg-gray-50">
                </div>

                <div class="w-full md:w-40">
                    <label for="type" class="block text-sm font-medium text-gray-700 mb-1">Type</label>
                    <select name="type" id="type" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-3 bg-gray-50">
                        <option value="">All Types</option>
                        <option value="CDI" {% if currentFilters.type == 'CDI' %}selected{% endif %}>CDI</option>
                        <option value="CDD" {% if currentFilters.type == 'CDD' %}selected{% endif %}>CDD</option>
                        <option value="Stage" {% if currentFilters.type == 'Stage' %}selected{% endif %}>Stage</option>
                        <option value="Freelance" {% if currentFilters.type == 'Freelance' %}selected{% endif %}>Freelance</option>
                    </select>
                </div>

                <div>
                    <button type="submit" class="w-full inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                        Search
                    </button>
                </div>
            </form>
        </div>

        <!-- Results Section -->
        <div class="space-y-6">
            {% if offers|length > 0 %}
                <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                    {% for offer in offers %}
                        <div class="bg-white overflow-hidden shadow-lg rounded-xl hover:shadow-xl transition-shadow duration-300 border border-gray-100 flex flex-col h-full">
                            <div class="p-6 flex flex-col flex-1">
                                <div class="flex justify-between items-start">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                        {{ offer.type }}
                                    </span>
                                    <span class="text-sm text-gray-400">{{ offer.createdAt|date('M d, Y') }}</span>
                                </div>
                                <h3 class="mt-4 text-xl font-bold text-gray-900 leading-tight">
                                    {{ offer.title }}
                                </h3>
                                <p class="mt-1 text-sm font-medium text-indigo-600">
                                    {{ offer.company.name }} â€” {{ offer.location }}
                                </p>
                                <div class="mt-4 text-gray-500 text-sm line-clamp-3">
                                    {{ offer.description }}
                                </div>
                                <div class="mt-6 flex-1 flex items-end">
                                    <a href="{{ path('candidate_offer_detail', {slug: offer.slug}) }}" class="w-full flex items-center justify-center px-4 py-2 border border-blue-200 shadow-sm text-sm font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                {% if maxPages > 1 %}
                    <div class="flex items-center justify-center mt-12">
                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                            {% for i in 1..maxPages %}
                                <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': i})) }}" 
                                   class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium {% if i == currentPage %}text-indigo-600 bg-indigo-50 border-indigo-500 z-10{% else %}text-gray-500 hover:bg-gray-50{% endif %}">
                                    {{ i }}
                                </a>
                            {% endfor %}
                        </nav>
                    </div>
                {% endif %}
            {% else %}
                <div class="text-center py-20 bg-white rounded-xl shadow-sm border border-gray-100">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No offers found</h3>
                    <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filters.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
