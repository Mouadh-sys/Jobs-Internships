{% extends 'layouts/candidate_base.html.twig' %}

{% block title %}Application Details - Jobs & Internships{% endblock %}

{% block breadcrumb %}
    <span class="breadcrumb-item">Application Details</span>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .application-container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .application-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            padding: 2.5rem;
            margin-bottom: 2rem;
        }

        .application-header {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid #f3f4f6;
        }

        .application-title {
            font-size: 2rem;
            font-weight: 700;
            color: #111827;
            margin-bottom: 0.5rem;
        }

        .application-company {
            font-size: 1.125rem;
            color: #6366f1;
            font-weight: 600;
        }

        .application-section {
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .section-title i {
            color: #6366f1;
        }

        .info-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: #f9fafb;
            border-radius: 10px;
            margin-bottom: 0.75rem;
        }

        .info-label {
            font-weight: 600;
            color: #374151;
            min-width: 150px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-label i {
            color: #6366f1;
            width: 20px;
        }

        .info-value {
            color: #4b5563;
            flex: 1;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 12px;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .status-badge.pending {
            background: #fef3c7;
            color: #92400e;
        }

        .status-badge.accepted {
            background: #d1fae5;
            color: #065f46;
        }

        .status-badge.rejected {
            background: #fee2e2;
            color: #991b1b;
        }

        .status-badge.withdrawn {
            background: #e5e7eb;
            color: #374151;
        }

        .message-box {
            padding: 1.5rem;
            background: #f9fafb;
            border-radius: 12px;
            border-left: 4px solid #6366f1;
            color: #4b5563;
            line-height: 1.7;
            white-space: pre-wrap;
        }

        .cv-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

        .cv-link:hover {
            background: linear-gradient(135deg, #4f46e5, #7c3aed);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
            color: white;
        }

        .application-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 2px solid #f3f4f6;
            flex-wrap: wrap;
        }

        .btn-action {
            padding: 0.875rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 0.9375rem;
        }

        .btn-secondary {
            background: #6b7280;
            color: white;
            box-shadow: 0 4px 12px rgba(107, 114, 128, 0.3);
        }

        .btn-secondary:hover {
            background: #4b5563;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(107, 114, 128, 0.4);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }

        .btn-danger:hover {
            background: linear-gradient(135deg, #dc2626, #b91c1c);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
            color: white;
        }

        .btn-primary {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #4f46e5, #7c3aed);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
            color: white;
        }
    </style>
{% endblock %}

{% block content %}
<div class="application-container">
    <div class="application-card">
        <div class="application-header">
            <h1 class="application-title">{{ application.jobOffer.title }}</h1>
            <p class="application-company">{{ application.jobOffer.company.name }}</p>
        </div>

        <div class="application-section">
            <h2 class="section-title">
                <i class="fas fa-info-circle"></i>
                Application Status
            </h2>
            <div class="info-item">
                <span class="info-label">
                    <i class="fas fa-flag"></i>
                    Status
                </span>
                <span class="info-value">
                    <span class="status-badge {{ application.status|lower }}">
                        {{ application.status }}
                    </span>
                </span>
            </div>
            <div class="info-item">
                <span class="info-label">
                    <i class="fas fa-calendar-plus"></i>
                    Applied At
                </span>
                <span class="info-value">{{ application.createdAt|date('F d, Y \\a\\t g:i A') }}</span>
            </div>
            <div class="info-item">
                <span class="info-label">
                    <i class="fas fa-calendar-check"></i>
                    Last Updated
                </span>
                <span class="info-value">{{ application.updatedAt|date('F d, Y \\a\\t g:i A') }}</span>
            </div>
        </div>

        {% if application.message %}
        <div class="application-section">
            <h2 class="section-title">
                <i class="fas fa-comment"></i>
                Your Message
            </h2>
            <div class="message-box">
                {{ application.message }}
            </div>
        </div>
        {% endif %}

        {% if application.cvFilename %}
        <div class="application-section">
            <h2 class="section-title">
                <i class="fas fa-file-pdf"></i>
                Submitted CV
            </h2>
            <a href="{{ asset('uploads/cv/' ~ application.cvFilename) }}" target="_blank" class="cv-link">
                <i class="fas fa-download"></i>
                Download CV
            </a>
        </div>
        {% endif %}

        <div class="application-actions">
            <a href="{{ path('candidate_applications_list') }}" class="btn-action btn-secondary">
                <i class="fas fa-arrow-left"></i>
                Back to Applications
            </a>
            <a href="{{ path('candidate_offer_detail', {slug: application.jobOffer.slug}) }}" class="btn-action btn-primary">
                <i class="fas fa-eye"></i>
                View Job Offer
            </a>
            {% if application.status == 'PENDING' %}
                <form method="post" action="{{ path('candidate_application_withdraw', {id: application.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('withdraw' ~ application.id) }}">
                    <button type="submit" class="btn-action btn-danger" onclick="return confirm('Are you sure you want to withdraw this application?')">
                        <i class="fas fa-times"></i>
                        Withdraw Application
                    </button>
                </form>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
