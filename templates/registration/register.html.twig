{% extends 'base.html.twig' %}

{% block title %}Create Account - Jobs & Internships{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --primary-light: #818cf8;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        .register-container {
            width: 100%;
            max-width: 500px;
        }

        .register-card {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 3rem;
            position: relative;
            overflow: hidden;
        }

        .register-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), #8b5cf6, #ec4899);
        }

        .register-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .register-logo {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary-color), #8b5cf6);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            box-shadow: 0 8px 16px rgba(99, 102, 241, 0.3);
        }

        .register-logo i {
            font-size: 2.5rem;
            color: white;
        }

        .register-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
        }

        .register-subtitle {
            color: var(--gray-600);
            font-size: 1rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: var(--gray-700);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-400);
            font-size: 1.1rem;
            z-index: 1;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 3rem;
            border: 2px solid var(--gray-200);
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: var(--gray-50);
            color: var(--gray-900);
            box-sizing: border-box;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary-color);
            background: white;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

        .account-type-group {
            display: flex;
            gap: 1rem;
            margin-top: 0.5rem;
        }

        .account-type-option {
            flex: 1;
            position: relative;
        }

        .account-type-option input[type="radio"] {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

        .account-type-label {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            border: 2px solid var(--gray-200);
            border-radius: 12px;
            background: var(--gray-50);
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            font-weight: 500;
            color: var(--gray-700);
        }

        .account-type-option input[type="radio"]:checked + .account-type-label {
            border-color: var(--primary-color);
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
            color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

        .account-type-label i {
            margin-right: 0.5rem;
            font-size: 1.2rem;
        }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--gray-400);
            cursor: pointer;
            font-size: 1.1rem;
            padding: 0.5rem;
            z-index: 1;
            transition: color 0.3s ease;
        }

        .password-toggle:hover {
            color: var(--primary-color);
        }

        .error-message {
            background: #fef2f2;
            border: 2px solid #fecaca;
            color: #991b1b;
            padding: 1rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            animation: slideDown 0.3s ease;
        }

        .error-message i {
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .field-error {
            color: var(--danger-color);
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .field-error i {
            font-size: 0.875rem;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .checkbox-wrapper {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            padding: 1rem;
            background: var(--gray-50);
            border-radius: 12px;
            border: 2px solid var(--gray-200);
            transition: all 0.3s ease;
        }

        .checkbox-wrapper:hover {
            border-color: var(--primary-color);
            background: white;
        }

        .checkbox-wrapper input[type="checkbox"] {
            width: 20px;
            height: 20px;
            margin-top: 2px;
            cursor: pointer;
            accent-color: var(--primary-color);
        }

        .checkbox-wrapper label {
            cursor: pointer;
            color: var(--gray-700);
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .btn-register {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, var(--primary-color), #8b5cf6);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
            margin-top: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.5);
            background: linear-gradient(135deg, var(--primary-hover), #7c3aed);
        }

        .btn-register:active {
            transform: translateY(0);
        }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 2rem 0;
            color: var(--gray-500);
            font-size: 0.9rem;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid var(--gray-200);
        }

        .divider::before {
            margin-right: 1rem;
        }

        .divider::after {
            margin-left: 1rem;
        }

        .login-link {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid var(--gray-200);
        }

        .login-link p {
            color: var(--gray-600);
            margin-bottom: 0.5rem;
        }

        .login-link a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .login-link a:hover {
            color: var(--primary-hover);
        }

        .company-field {
            animation: slideDown 0.3s ease;
        }

        @media (max-width: 640px) {
            .register-card {
                padding: 2rem 1.5rem;
            }

            .register-title {
                font-size: 1.75rem;
            }

            .account-type-group {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <div class="register-logo">
                <i class="fas fa-user-plus"></i>
            </div>
            <h1 class="register-title">Create Your Account</h1>
            <p class="register-subtitle">Join us and start your journey</p>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'register-form', 'data-turbo': 'false'}}) }}

            {% if not registrationForm.vars.valid %}
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>Please correct the errors below and try again.</span>
                </div>
            {% endif %}

            {% for message in app.flashes('error') %}
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>{{ message }}</span>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('success') %}
                <div class="error-message" style="background: #f0fdf4; border-color: #bbf7d0; color: #166534;">
                    <i class="fas fa-check-circle"></i>
                    <span>{{ message }}</span>
                </div>
            {% endfor %}

            <!-- Account Type -->
            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-user-tag"></i> Account Type
                </label>
                <div class="account-type-group">
                    {% for child in registrationForm.accountType %}
                        <div class="account-type-option">
                            {{ form_widget(child, {'attr': {'class': 'account-type-radio'}}) }}
                            <label for="{{ child.vars.id }}" class="account-type-label">
                                {% if child.vars.value == 'candidate' %}
                                    <i class="fas fa-user"></i>
                                    <span>Candidate</span>
                                {% else %}
                                    <i class="fas fa-building"></i>
                                    <span>Company</span>
                                {% endif %}
                            </label>
                        </div>
                    {% endfor %}
                </div>
                {% if registrationForm.accountType.vars.errors|length > 0 %}
                    <div class="field-error">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ form_errors(registrationForm.accountType) }}
                    </div>
                {% endif %}
            </div>

            <!-- Company Name (conditional) -->
            <div id="company-name-field" class="form-group company-field" style="display: none;">
                <label for="{{ registrationForm.companyName.vars.id }}" class="form-label">
                    <i class="fas fa-building"></i> Company Name
                </label>
                <div class="input-wrapper">
                    <i class="fas fa-building input-icon"></i>
                    {{ form_widget(registrationForm.companyName, {'attr': {'class': 'form-input', 'placeholder': 'Enter your company name'}}) }}
                </div>
                {% if registrationForm.companyName.vars.errors|length > 0 %}
                    <div class="field-error">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ form_errors(registrationForm.companyName) }}
                    </div>
                {% endif %}
            </div>

            <!-- Full Name -->
            <div class="form-group">
                <label for="{{ registrationForm.fullName.vars.id }}" class="form-label">
                    <i class="fas fa-user"></i> Full Name
                </label>
                <div class="input-wrapper">
                    <i class="fas fa-user input-icon"></i>
                    {{ form_widget(registrationForm.fullName, {'attr': {'class': 'form-input', 'placeholder': 'Enter your full name'}}) }}
                </div>
                {% if registrationForm.fullName.vars.errors|length > 0 %}
                    <div class="field-error">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ form_errors(registrationForm.fullName) }}
                    </div>
                {% endif %}
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="{{ registrationForm.email.vars.id }}" class="form-label">
                    <i class="fas fa-envelope"></i> Email Address
                </label>
                <div class="input-wrapper">
                    <i class="fas fa-envelope input-icon"></i>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-input', 'placeholder': 'Enter your email'}}) }}
                </div>
                {% if registrationForm.email.vars.errors|length > 0 %}
                    <div class="field-error">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ form_errors(registrationForm.email) }}
                    </div>
                {% endif %}
            </div>

            <!-- Password -->
            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-lock"></i> Password
                </label>
                {% for passwordField in registrationForm.plainPassword %}
                    <div class="input-wrapper" style="margin-bottom: 1rem;">
                        <i class="fas fa-lock input-icon"></i>
                        {{ form_widget(passwordField, {'attr': {'class': 'form-input', 'placeholder': loop.first ? 'Enter your password' : 'Confirm your password'}}) }}
                        {% if loop.first %}
                            <button type="button" class="password-toggle" onclick="togglePassword('{{ passwordField.vars.id }}', 'toggle{{ loop.index }}')">
                                <i class="fas fa-eye" id="toggle{{ loop.index }}"></i>
                            </button>
                        {% endif %}
                    </div>
                    {% if passwordField.vars.errors|length > 0 %}
                        <div class="field-error">
                            <i class="fas fa-exclamation-circle"></i>
                            {{ form_errors(passwordField) }}
                        </div>
                    {% endif %}
                {% endfor %}
                {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                    <div class="field-error">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                {% endif %}
            </div>

            <!-- Terms Agreement -->
            <div class="form-group">
                <div class="checkbox-wrapper">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'id': 'agreeTerms'}}) }}
                    <label for="agreeTerms">
                        I agree to the <a href="#" style="color: var(--primary-color);">Terms of Service</a> and <a href="#" style="color: var(--primary-color);">Privacy Policy</a>
                    </label>
                </div>
                {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                    <div class="field-error">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                {% endif %}
            </div>

            {{ form_widget(registrationForm._token) }}

            <button type="submit" class="btn-register">
                <i class="fas fa-user-plus"></i>
                Create Account
            </button>

        {{ form_end(registrationForm, {'render_rest': false}) }}

        <div class="divider">or</div>

        <div class="login-link">
            <p>Already have an account?</p>
            <a href="{{ path('login') }}">
                <i class="fas fa-sign-in-alt"></i>
                Sign in to your account
            </a>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const accountTypeInputs = document.querySelectorAll('input[name="registration_form[accountType]"]');
    const companyNameField = document.getElementById('company-name-field');
    
    function toggleCompanyField() {
        const selectedType = document.querySelector('input[name="registration_form[accountType]"]:checked');
        if (selectedType && selectedType.value === 'company') {
            companyNameField.style.display = 'block';
            const input = companyNameField.querySelector('input');
            if (input) {
                input.required = true;
                input.focus();
            }
        } else {
            companyNameField.style.display = 'none';
            const input = companyNameField.querySelector('input');
            if (input) {
                input.required = false;
                input.value = '';
            }
        }
    }
    
    accountTypeInputs.forEach(input => {
        input.addEventListener('change', toggleCompanyField);
    });
    
    // Initial state
    toggleCompanyField();

    // Form validation feedback
    const form = document.querySelector('.register-form');
    if (form) {
        const inputs = form.querySelectorAll('.form-input');
        inputs.forEach(input => {
            input.addEventListener('blur', function() {
                if (this.value.trim() !== '') {
                    this.style.borderColor = 'var(--success-color)';
                } else {
                    this.style.borderColor = 'var(--gray-200)';
                }
            });

            input.addEventListener('input', function() {
                if (this.value.trim() !== '') {
                    this.style.borderColor = 'var(--primary-color)';
                }
            });
        });
    }
});

function togglePassword(inputId, iconId) {
    const input = document.getElementById(inputId);
    const icon = document.getElementById(iconId);
    if (input && icon) {
        const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
        input.setAttribute('type', type);
        
        if (type === 'text') {
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }
}
</script>
{% endblock %}

